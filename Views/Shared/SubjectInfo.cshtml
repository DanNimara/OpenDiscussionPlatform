
<div class="panel-heading">
    <h3 class="panel-title"><strong>@Model.Title</strong></h3>
</div>

<div class="panel-body">
    @Model.Content
    <br /><br />

    <i class="glyphicon glyphicon-globe"></i> @Model.Category.Name <br />
    <i class="glyphicon glyphicon-user"></i> @Html.ActionLink(linkText: (string)Model.User.UserName, actionName: "Show", controllerName: "Account", routeValues: new { id = Model.UserID }, htmlAttributes: null)
    <span class="label label-info pull-right">@Model.Date</span>
</div>
