@model OpenDiscussionPlatform.Models.Category
@{
    ViewBag.Title = "Editeaza " + Model.Name;
}

<h1>@ViewBag.Title</h1>

@using (Html.BeginForm(actionName: "Edit", controllerName: "Categories"))
{

    @Html.HttpMethodOverride(HttpVerbs.Put)

    @Html.ValidationSummary(false, null, new { @class = "text-danger" })

    @Html.Hidden("CategoryID")

    <div class="form-group">
        @Html.Label("Name", "Nume categorie")
        @Html.Editor("Name")
        @Html.ValidationMessage("Name", null, new { @class = "text-danger" })
    </div>

    <div class="form-group">
        @Html.Label("Description", "Descriere categorie")
        @Html.Editor("Description")
    </div>

    <button class="btn btn-success" type="submit">Modifica</button>

}