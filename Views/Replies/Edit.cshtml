@model OpenDiscussionPlatform.Models.Reply
@{
    ViewBag.Title = "Editeaza raspuns";
}


<br />
<br />

<div class="panel panel-default">
    <div class="panel-body">

        <h1>@ViewBag.Title</h1>

        @using (Html.BeginForm(actionName: "Edit", controllerName: "Replies"))
        {

            @Html.HttpMethodOverride(HttpVerbs.Put)

            @Html.ValidationSummary(false, null, new { @class = "text-danger" })

            @Html.Hidden("ReplyID")

            <div class="form-group">
                @Html.Label("Content", "Continut raspuns")
                @Html.Editor("Content", new { htmlAttributes = new { @class = "form-control" } })
                @Html.ValidationMessage("Content", null, new { @class = "text-danger" })
            </div>

            @Html.Hidden("Date")

            @Html.Hidden("SubjectID")

            <button class="btn btn-success" type="submit">Modifica</button>
        }
    </div>
</div>
