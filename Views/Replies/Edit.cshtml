@model OpenDiscussionPlatform.Models.Reply
@{
    ViewBag.Title = "Editeaza raspuns";
}

<h1>@ViewBag.Title</h1>


<form method="post" action="/Replies/Edit/@Model.ReplyID">
    @Html.HttpMethodOverride(HttpVerbs.Put)

    @Html.Hidden("ReplyID")


    @Html.Label("Content", "Continut raspuns")
    <br />
    @Html.Editor("Content")
    <br />
    <br />


    @Html.Hidden("Date")


    @Html.Hidden("SubjectID")


    <button class="btn btn-success" type="submit">Modifica</button>
</form>