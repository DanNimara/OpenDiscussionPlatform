@model OpenDiscussionPlatform.Models.ApplicationUser
@{
    ViewBag.Title = "Editeaza profil";
}

<h1>@ViewBag.Title</h1>

@using (Html.BeginForm(actionName: "Edit", controllerName: "Account"))
{

    @Html.HttpMethodOverride(HttpVerbs.Put)

    @Html.ValidationSummary(false, null, new { @class = "text-danger" })

    @Html.Hidden("Id")

    <div class="form-group">
        @Html.Label("FirstName", "Prenume")
        @Html.Editor("FirstName", new { htmlAttributes = new { @class = "form-control" } })
        @Html.ValidationMessage("Name", null, new { @class = "text-danger" })
    </div>

    <div class="form-group">
        @Html.Label("LastName", "Nume")
        @Html.Editor("LastName", new { htmlAttributes = new { @class = "form-control" } })
        @Html.ValidationMessage("Name", null, new { @class = "text-danger" })
    </div>

    <div class="form-group">
        @Html.Label("AboutMe", "Despre mine")
        @Html.Editor("AboutMe", new { htmlAttributes = new { @class = "form-control" } })
        @Html.ValidationMessage("Name", null, new { @class = "text-danger" })
    </div>

    <button class="btn btn-success" type="submit">Modifica</button>

}