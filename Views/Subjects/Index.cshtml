@{
    ViewBag.Title = "Rezultatele cautarii pentru \"" + ViewBag.search + "\"";
}

<h1>@ViewBag.Title</h1>


<a class="btn btn-primary" href="/Categories/Index">Inapoi la categorii</a>
<br />
<br />

@foreach (OpenDiscussionPlatform.Models.Subject subject in ViewBag.Subjects)
{
    <div class="panel panel-default">
        @Html.Partial("SubjectInfo", subject)

        <div class="panel-footer">
            <a class="btn btn-success btn-sm" href="/Subjects/Show/@subject.SubjectID">Afisare subiect</a>
        </div>
    </div>
}

<div>
    <nav aria-label="Page navigation">
        <ul class="pagination">
            <li>
                <a href="/Subjects/Index?search=@(ViewBag.search)&page=1" aria-label="First">
                    <span aria-hidden="true">&laquo;</span>
                </a>
            </li>

            @for (int i = 1; i <= ViewBag.lastPage; i++)
            {
                <li><a href="/Subjects/Index?search=@(ViewBag.search)&page=@i">@(i)</a></li>
            }

            <li>
                <a href="/Subjects/Index?search=@(ViewBag.search)&page=@(ViewBag.lastPage)" aria-label="Last">
                    <span aria-hidden="true">&raquo;</span>
                </a>
            </li>
        </ul>
    </nav>
</div>